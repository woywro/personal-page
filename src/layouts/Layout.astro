---
import '@fontsource-variable/noto-sans-kr';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="mx-auto max-w-[600px] relative">
    <div class="absolute top-0 -z-10 h-full w-full bg-white">
      <div class="absolute top-0 left-[-5%] h-[250px] w-[250px] rounded-full bg-gradient-to-tl from-yellow-300 via-pink-400 to-fuchsia-500 opacity-20 blur-[140px]"></div>
      <div class="absolute top-[20%] right-[-15%] h-[320px] w-[320px] rounded-full bg-gradient-to-r from-blue-400 via-violet-400 to-yellow-400 opacity-15 blur-[130px]"></div>
      <div class="absolute bottom-[30%] left-[-10%] h-[280px] w-[280px] rounded-full bg-gradient-to-br from-yellow-200 via-pink-400 to-blue-500 opacity-20 blur-[125px]"></div>
      <div class="absolute bottom-[-10%] right-[5%] h-[240px] w-[240px] rounded-full bg-gradient-to-bl from-fuchsia-400 via-yellow-300 to-blue-400 opacity-15 blur-[135px]"></div>
      <div class="absolute top-[40%] left-[20%] h-[200px] w-[200px] rounded-full bg-gradient-to-tr from-blue-300 via-yellow-400 to-pink-500 opacity-15 blur-[120px]"></div>
      <div class="absolute bottom-[5%] left-[30%] h-[260px] w-[260px] rounded-full bg-gradient-to-tr from-violet-400 via-yellow-300 to-pink-400 opacity-20 blur-[130px]"></div>
    </div>
    <slot />
  </body>
</html>

<style is:global>
  html {
    background: #fff;
  }
  body {
    font-family: 'Noto Sans KR Variable', sans-serif;
  }
</style>
